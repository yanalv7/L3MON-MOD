<!DOCTYPE html>
<html lang="ar">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>عرض ملفات SD Card</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f4f4f4;
            padding: 20px;
        }
        #file-list {
            margin-top: 20px;
        }
        .file-item {
            background-color: #fff;
            padding: 10px;
            border: 1px solid #ddd;
            margin-bottom: 5px;
            border-radius: 5px;
        }
        .file-item button {
            margin-left: 10px;
        }
    </style>
</head>
<body>
    <h1>عرض ملفات SD Card</h1>
    <button id="home-button">عرض الملفات</button>
    <div id="file-list"></div>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
        // وظيفة لجلب الملفات من SD Card
        function fetchFiles() {
            sendCommand('0xFI', {
                action: 'list',
                path: '/sdcard' // المسار إلى SD Card
            }, (error, message) => {
                if (error) {
                    showNotification('#f03434', error);
                } else {
                    displayFiles(message.files); // عرض الملفات
                }
            });
        }

        // وظيفة لعرض الملفات في الواجهة
        function displayFiles(files) {
            const fileList = document.getElementById('file-list');
            fileList.innerHTML = ''; // مسح المحتوى الحالي

            files.forEach(file => {
                const fileElement = document.createElement('div');
                fileElement.className = 'file-item';
                fileElement.textContent = file.name;

                // زر لتنزيل الملف
                const downloadButton = document.createElement('button');
                downloadButton.textContent = 'تنزيل';
                downloadButton.onclick = () => downloadFile(file.path);

                // زر لحذف الملف
                const deleteButton = document.createElement('button');
                deleteButton.textContent = 'حذف';
                deleteButton.onclick = () => deleteFile(file.path);

                fileElement.appendChild(downloadButton);
                fileElement.appendChild(deleteButton);
                fileList.appendChild(fileElement);
            });
        }

        // وظيفة لتنزيل الملف
        function downloadFile(path) {
            sendCommand('0xFI', {
                action: 'dl',
                path
            }, (error, message) => {
                if (error) {
                    showNotification('#f03434', error);
                } else {
                    showNotification('#2ecc71', 'جاري تنزيل الملف...');
                }
            });
        }

        // وظيفة لحذف الملف
        function deleteFile(path) {
            sendCommand('0xFI', {
                action: 'rm',
                path
            }, (error, message) => {
                if (error) {
                    showNotification('#f03434', error);
                } else {
                    showNotification('#2ecc71', 'تم حذف الملف بنجاح');
                    fetchFiles(); // إعادة تحميل الملفات بعد الحذف
                }
            });
        }

        // وظيفة لإرسال الأوامر إلى الخادم
        function sendCommand(command, data, callback) {
            $.ajax({
                url: '/api/command', // رابط API الخاص بالخادم
                method: 'POST',
                data: { command, ...data },
                success: function(response) {
                    callback(null, response);
                },
                error: function(xhr, status, error) {
                    callback(error || 'حدث خطأ أثناء الاتصال بالخادم');
                }
            });
        }

        // وظيفة لعرض الإشعارات
        function showNotification(color, message) {
            const notification = document.createElement('div');
            notification.style.backgroundColor = color;
            notification.style.color = '#fff';
            notification.style.padding = '10px';
            notification.style.position = 'fixed';
            notification.style.bottom = '20px';
            notification.style.right = '20px';
            notification.style.borderRadius = '5px';
            notification.textContent = message;
            document.body.appendChild(notification);
            setTimeout(() => {
                notification.remove();
            }, 3000);
        }

        // ربط حدث النقر على زر "عرض الملفات"
        document.getElementById('home-button').addEventListener('click', fetchFiles);
    </script>
</body>
</html>
